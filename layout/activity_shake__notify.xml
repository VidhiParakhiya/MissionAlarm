<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shabg"
    android:layout_height="match_parent"
    tools:context=".Shake_Notify">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:background="@drawable/bgg"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="italic"
                android:gravity="center"
                android:paddingStart="5dp"
                android:drawableLeft="@drawable/ic_left_arrow"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Shake"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="italic">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="Time Limit"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardMaxElevation="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1.5"
                    android:id="@+id/selectNumber"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                </TextView>
            </LinearLayout>

            <NumberPicker
                android:id="@+id/numPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:scrollbarSize="90dp"
                android:theme="@style/NumberPickerText" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:text="No of Shakes"
            android:textColor="#000"
            android:paddingStart="15dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardMaxElevation="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1.5"
                    android:id="@+id/selectNumber2"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                </TextView>
            </LinearLayout>

            <NumberPicker
                android:id="@+id/numPicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:scrollbarSize="90dp"
                android:theme="@style/NumberPickerText" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:background="@drawable/button_bg"
                android:text="Set"
                android:layout_margin="20dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
